<% content_for :title, "Modifier #{@event.name}" %>
<% content_for :meta_description, "Modifier les détails de l'événement déjà créé" %>

<%= form_with(model: @event, local: true, multipart: true) do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>
  <br>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control", rows: 4 %>
  </div>
  <br>

  <div class="form-group">
    <%= form.label :start_date %>
    <%= form.datetime_local_field :start_date, class: "form-control" %>
  </div>
  <br>

  <div class="form-group">
    <%= form.label :end_date %>
    <%= form.datetime_local_field :end_date, class: "form-control" %>
  </div>
  <br>

  <div class="form-group">
    <%= form.label :cover_photo %>
    <%= form.file_field :cover_photo, class: "form-control" %>
  </div>
  <br>

  <%= form.submit "Modifier l'événement", class: "btn btn-primary" %>
<% end %>
