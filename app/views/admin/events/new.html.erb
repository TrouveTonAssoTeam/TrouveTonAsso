<h1 class="text-center">Nouvel Ev√®nement</h1>

      <%= form_with(model: @event, url: events_path, method: :post, class: 'mt-4') do |form| %>
        <div class="mb-3">
          <%= form.label :titre, class: 'form-label' %>
          <%= form.text_field :titre, class: 'form-control' %>
        </div>

        <div class="mb-3">
        <%= form.label :organisation_id, class: 'form-label' %>
        <%= form.text_field :organisation_id, class: 'form-control' %>
      </div>

        <div class="mb-3">
          <%= form.label :description, class: 'form-label' %>
          <%= form.text_area :description, class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= form.label :start_date, class: 'form-label' %>
          <%= form.datetime_field :start_date, class: 'form-control' %>
        </div>

        <div class="mb-3">
        <%= form.label :end_date, class: 'form-label' %>
        <%= form.datetime_field :end_date, class: 'form-control' %>
      </div>

        <div class="text-center">
          <%= form.submit 'Create Event', class: 'btn btn-primary' %>
        </div>
      <% end %>
      </div>
