<% content_for :title, "Mot de passe oublié ?" %>
<% content_for :meta_description, "Recevez un email pour définir un nouveau mot de passe." %>

<h2>Mot de passe oublié ?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form" }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="btn-group">
    <%= f.submit "Réinitialiser le mot de passe", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
