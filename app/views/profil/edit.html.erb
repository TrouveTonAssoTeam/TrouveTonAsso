<h2>Modifier vos informations</h2>

<%= form_for( @user, url: profil_path(@user), method: :patch, html: { class: "form" }) do |f| %>
  
  <div class="field">
  <%= f.label :first_name, "Prénom" %><br />
  <%= f.text_field :first_name, autofocus: true, autocomplete: "email" %>
</div>

<div class="field">
    <%= f.label :last_name, "Nom" %><br />
    <%= f.text_field :last_name, autofocus: true, autocomplete: "email" %>
  </div>


  <div class="actions">
    <%= f.submit "Mettre à jour", class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to "Retour", :back %>