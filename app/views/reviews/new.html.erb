<% content_for :title, "Laisser un avis" %>
<% content_for :meta_description, "Vous pouvez laisser un avis sur l'événement auquel vous avez participé et laisser les autres utilisateurs de l'application profiter de vos retours." %>

<h1>Avis</h1>

<%= form_with(model: @review, url: reviews_path) do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title %>

  <%= form.label :description %>
  <%= form.text_area :description %>

  <%= form.label :rating %>
  <%= form.number_field :rating, in: 1..5 %>

  <!-- Ajoutez d'autres champs si nécessaire -->

  <%= form.submit "Créer l'avis" %>
<% end %>
