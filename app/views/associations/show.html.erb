<!-- associations/show.html.erb -->

<% if @association %>
  <h1>Détails de l'association</h1>
  <p>Nom : <%= @association.name %></p>
  <p>Description : <%= @association.description %></p>
  <p>Ville : <%= @association.city %></p>
  <p>Site Web : <%= @association.website %></p>
  <!-- Ajoutez d'autres détails si nécessaire -->

  <!-- Formulaire pour la photo de couverture -->
  <%= form_for @association, url: association_path(@association), method: :patch, html: { multipart: true } do |f| %>
    <div class="field">
      <%= f.label :cover_photo %>
      <%= f.file_field :cover_photo %>
    </div>

    <div class="actions">
      <%= f.submit 'Téléverser' %>
    </div>
  <% end %>
<% else %>
  <p>Association non trouvée</p>
<% end %>


