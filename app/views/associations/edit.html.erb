<%= form_for @association, url: association_path(@association), method: :patch, html: { multipart: true } do |f| %>
  <!-- Vos champs de formulaire ici -->
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>
  <!-- Ajoutez d'autres champs si nÃ©cessaire -->
  <%= f.submit "Enregistrer les modifications" %>
<% end %>
