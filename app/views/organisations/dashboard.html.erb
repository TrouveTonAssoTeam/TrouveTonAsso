      <h3>Vos questions en attente</h3>
      <% if !@questions.empty? %>
        <% @questions.each do |faq| %>
          <!-- ... existing code ... -->
        <% end %>
      <% else %>
        <p>Aucune question en attente</p>
      <% end %>
    </div>
    <div class="event-buttons text-center" style="margin-top: 20px;">
      <%= link_to "Voir les événements", organisation_events_path(@organisation), class: "btn btn-secondary" %>
        <%= link_to "Créer un événement", new_event_path(@organisation), class: "btn btn-secondary" %>
         <%= link_to "Modifier page profil", edit_organisation_path(@organisation), class: "btn btn-secondary" %>
        <%= link_to "Voir la cagnotte", cagnotte_path(@organisation), class: "btn btn-secondary" %>
        <%= link_to "Voir les demandes de retrait", withdrawals_path(@organisation), class: "btn btn-secondary" %>
      <div class="button-group">
  <div class="event-buttons text-center" style="margin-top: 20px;">
    <!-- Ajout d'une div pour les boutons -->
    <div class="event-buttons text-center">
      <div class="button-group">
        <%= link_to "Vos événements", organisation_events_path(@organisation), class: "btn btn-secondary", style: "font-size: 16px; padding: 5px 10px; margin-left: 10px; margin-right: 20px; margin-bottom: 10px;" %>
