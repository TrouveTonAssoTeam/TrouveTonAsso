<% content_for :title, "Modifier les informations de #{@organisation.name}" %>
<% content_for :meta_description, "Modifier les informations publiques de votre association en personalisant son nom, sa decription, sa photo de couverture ou même sa localisation." %>

<%= form_for @organisation, url: organisation_path(Organisation.find(params[:id])), method: :patch, html: { class: "form", multipart: true } do |f| %>

  <div class="field">
    <strong><%= f.label :name %></strong>
    <%= f.text_field :name, disabled: true %>
  </div>

  <div class="field">
    <strong><%= f.label :description %></strong>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <strong><%= f.label :city %></strong>
    <%= f.text_field :city, disabled: true %>
  </div>

  <div class="field">
   <strong><%= f.label :cover_photo %></strong>
   <br>
    <%= f.file_field :cover_photo, style: 'display: none;', id: 'cover_photo_input' %>
    <%= f.label 'Choisir une photo de couverture', class: 'btn btn-primary', for: 'cover_photo_input' %>
  </div>

  <div class="actions">
    <%= f.submit 'Mettre à jour', class: 'btn btn-primary' %>
  </div>
<% end %>
