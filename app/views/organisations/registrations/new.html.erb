<% content_for :title, "Finalisation de l'inscription" %>
<% content_for :meta_description, "Afin de terminer l'inscription de votre association, vous devez définir un email et un mot de passe." %>

<h2 class="text-center">Définissez un email et un mot de passe</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form' }) do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true, placeholder: 'Name', required: true, value: session[:asso]["name"], disabled: true %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description, placeholder: 'Description', required: true, value: session[:asso]["description"], disabled: true %>
  </div>
  <div>
    <%= f.label :address %>
    <%= f.text_field :address, placeholder: 'Address', required: true, value: session[:asso]["address"], disabled: true %>
  </div>
  <div class="form-group">
    <div>
      <%= f.label :zip %>
      <%= f.text_field :zip, placeholder: 'Zipcode', required: true, value: session[:asso]["zip"], disabled: true %>
    </div>
    <div>
      <%= f.label :city %>
      <%= f.text_field :city, placeholder: 'City', required: true, value: session[:asso]["city"], disabled: true %>
    </div>
  </div>
  <div>
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, placeholder: 'Email', required: true %>
  </div>
  <div>
    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: 'new-password', placeholder: 'Password', required: true %>
  </div>
  <div>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: 'new-password', placeholder: 'Confirm Password', required: true %>
  </div>

  <%= f.submit "S'inscrire", class: 'btn btn-primary' %>
<% end %>
